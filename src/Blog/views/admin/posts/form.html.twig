{{ csrf_input() | raw }}
<div class="row">
    <div class="col-md-12"> {{ field('name', item.name, "Titre de l'article") }}</div>
    <div class="col-md-12"> {{ field('slug', item.slug, "Identifiant de l'article <em>(slug)</em>") }}</div>
    <div class="col-md-6">
        {{ field('category_id', item.category_id, "Catégorie", {options: categories}) }}
    </div>
    <div class="col-md-6">
        {{ field('created_at', item.created_at, "Date de création", {class: 'datepicker'}) }}
    </div>
    <div class="col-md-12">{{ field('content', item.content, "Contenu de l'article", {type: 'textarea'}) }}</div>
</div>




